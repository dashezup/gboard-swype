<?xml version="1.0" encoding="utf-8"?>
<framework>
    <ime announce_auto_selected_candidate="true" auto_capital="true" class="com.google.android.apps.inputmethod.libs.latin5.LatinIme" display_app_completions="true" language="ba" string_id="ime_bashkir">
        <if enable_number_row="false">
            <keyboard_group variant="bashkir" variant_label="@string/variant_bashkir">
                <keyboard def="@xml/keyboard_ba" type="prime" />
                <include href="@xml/keyboards_non_prime_latin" />
            </keyboard_group>
        </if>
        <else>
            <keyboard_group layout_theme="@style/KeyboardLayoutTheme.WithNumberRow" variant="bashkir" variant_label="@string/variant_bashkir">
                <keyboard def="@xml/keyboard_ba" type="prime">
                    <merge def="@xml/keyboard_latin_fragment_numbers_10_11_11_11" />
                </keyboard>
                <include href="@xml/keyboards_non_prime_latin" />
            </keyboard_group>
        </else>
    </ime>
</framework>